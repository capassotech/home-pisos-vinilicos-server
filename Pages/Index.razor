@page "/"
@inject NavigationManager Navigation

@code {
    protected override void OnInitialized()
    {
        try
        {
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            // Manejo de errores (puedes registrar el error en un servicio de logging si lo tienes)
            Console.WriteLine($"Error en la redirección: {ex.Message}");
        }
    }
}
